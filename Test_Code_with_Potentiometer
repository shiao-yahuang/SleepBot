#include <Servo.h>

Servo myservo;  // create servo object to control a servo

Servo myservo2;

Servo myservo3;
// twelve servo objects can be created on most boards

int pos = 0;    // variable to store the servo position
int potPin = 2;
int val;
class move{
  public: 
  Servo temp_servo;
  move(int pin_input)
  {
//    Servo temp_servo = passed_servo;
    temp_servo.attach(pin_input);
  }

  void go_to_a(int deg)
  {
    
    temp_servo.write(deg);
//    Serial.println("correct");
  }


  
  

  
};
void setup() {
  Serial.begin(9600);
  myservo.attach(9);  // attaches the servo on pin 9 to the servo object
  myservo2.attach(10);
  myservo3.attach(11);
}

