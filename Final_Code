#include <Servo.h>  // add servo library
 
Servo myservo;
Servo myservo2;
Servo myservo3;// create servo object to control a servo
 
int potpin = 2;  // analog pin used to connect the potentiometer
int val;    // variable to read the value from the analog pin
bool flag = true;
 
void setup() {
  Serial.begin(9600);
  myservo.attach(9);
  myservo2.attach(10);
  myservo3.attach(11);// attaches the servo on pin 9 to the servo object
}
 
void loop() {
  val = analogRead(potpin);  
//  Serial.println(val);// reads the value of the potentiometer (value between 0 and 1023)
  val = map(val, 0, 1023, 20, 150);     // scale it to use it with the servo (value between 0 and 180)
  Serial.print("degree");
  Serial.println(val);
//  val =0;
//  myservo.write(val);
  myservo.write(20);
  myservo2.write(20);
  myservo3.write(20);

//   myservo.write(38);
if(flag)
{
      // Go to "G"
        for ( int pos = 20; pos <= +20; pos += 1) { // goes from 0 degrees to 180 degrees
      // in steps of 1 degree
      myservo.write(pos);              // tell servo to go to position in variable 'pos'
      delay(15);                       // waits 15ms for the servo to reach the position
    }

       for (int pos = 20; pos <= +30; pos += 1) { // goes from 0 degrees to 180 degrees
      // in steps of 1 degree
      myservo3.write(pos);              // tell servo to go to position in variable 'pos'
      delay(15);                       // waits 15ms for the servo to reach the position
    }
    
  //  myservo2.write(30);
       for (int pos = 20; pos <= +35; pos += 1) { // goes from 0 degrees to 180 degrees
      // in steps of 1 degree
      myservo2.write(pos);              // tell servo to go to position in variable 'pos'
      delay(15);                       // waits 15ms for the servo to reach the position
    }
  ////  myservo3.write(20);

    // Go to home
        for ( int pos = 20; pos >= +20; pos -= 1) { // goes from 0 degrees to 180 degrees
      // in steps of 1 degree
      myservo.write(pos);              // tell servo to go to position in variable 'pos'
      delay(5);                       // waits 15ms for the servo to reach the position
    }

       for (int pos = 30; pos >= +20; pos -= 1) { // goes from 0 degrees to 180 degrees
      // in steps of 1 degree
      myservo3.write(pos);              // tell servo to go to position in variable 'pos'
      delay(5);                       // waits 15ms for the servo to reach the position
    }
    
  //  myservo2.write(30);
       for (int pos = 35; pos >= +20; pos -= 1) { // goes from 0 degrees to 180 degrees
      // in steps of 1 degree
      myservo2.write(pos);              // tell servo to go to position in variable 'pos'
      delay(5); 
       }
        
//        myservo.write(20);
//        myservo2.write(20);
//        myservo3.write(20);
      
      //Go to "N"
      for ( int pos = 20; pos <= +35; pos += 1) { // goes from 0 degrees to 180 degrees
      // in steps of 1 degree
      myservo.write(pos);              // tell servo to go to position in variable 'pos'
      delay(15);                       // waits 15ms for the servo to reach the position
    }
    
  //  myservo2.write(30);
       for (int pos = 20; pos <= +31; pos += 1) { // goes from 0 degrees to 180 degrees
      // in steps of 1 degree
      myservo2.write(pos);              // tell servo to go to position in variable 'pos'
      delay(15);                       // waits 15ms for the servo to reach the position
    }
  ////  myservo3.write(20);
         for (int pos = 20; pos <= +20; pos += 1) { // goes from 0 degrees to 180 degrees
      // in steps of 1 degree
      myservo3.write(pos);              // tell servo to go to position in variable 'pos'
      delay(15);                       // waits 15ms for the servo to reach the position
    }

    //Go to Home
     for ( int pos = 35; pos >= +20; pos -= 1) { // goes from 0 degrees to 180 degrees
      // in steps of 1 degree
      myservo.write(pos);              // tell servo to go to position in variable 'pos'
      delay(5);                       // waits 15ms for the servo to reach the position
    }

       for (int pos = 32; pos >= +20; pos -= 1) { // goes from 0 degrees to 180 degrees
      // in steps of 1 degree
      myservo3.write(pos);              // tell servo to go to position in variable 'pos'
      delay(5);                       // waits 15ms for the servo to reach the position
    }
    
  //  myservo2.write(30);
       for (int pos = 20; pos >= +20; pos -= 1) { // goes from 0 degrees to 180 degrees
      // in steps of 1 degree
      myservo2.write(pos);              // tell servo to go to position in variable 'pos'
      delay(5); 
       }
      

}
flag = false;
delay(50);
//  myservo.write(20);
//  myservo2.write(20);
//  myservo3.write(20);
//delay(50);
//     myservo.write(46);
//
//  myservo2.write(30);
//
//  myservo3.write(41);
//delay(50);

  
  
//  myservo3.write(val);
  // sets the servo position according to the scaled value
                             // waits for the servo to get there
}
